@{
    var imageBase64List = ViewBag.SegmentationResults as List<string>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hasil Segmentasi Gambar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

<div class="container mt-5">
    <h1 class="text-center">Hasil Segmentasi Gambar</h1>

    @if (imageBase64List != null && imageBase64List.Any())
    {
        <div class="row mt-4">
            @foreach (var imageBase64 in imageBase64List)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-lg p-3 mb-4 rounded-4">
                        <img src="@imageBase64" class="img-fluid rounded" alt="Segmented Image" />
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-danger text-center mt-4">Hasil segmentasi tidak ditemukan.</p>
    }

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Kembali ke Halaman Utama</a>
    </div>
</div>

</body>
</html>