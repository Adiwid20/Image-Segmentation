@model UjiCoba.Models.UploadImage

@{
    Layout = "_Layout";
}

<!-- Header dengan judul yang lebih menarik -->
<h2 class="text-center text-primary my-5">Upload Gambar untuk Segmentasi</h2>

<div class="container">
    <div class="row justify-content-center">
        <!-- Card Form Upload Gambar -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg p-4 rounded-4">
                <h3 class="text-center mb-4 text-muted">Pilih Gambar</h3>
                <form asp-action="UploadImage" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="ImageFile" class="form-label">Gambar Segmentasi</label>
                        <input type="file" class="form-control" id="ImageFile" name="ImageFile" accept="image/*" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg w-100">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @if (ViewBag.SegmentationResult != null)
    {
        <!-- Menampilkan Hasil Segmentasi -->
        <div class="row justify-content-center mt-5">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg p-4 rounded-4">
                    <h3 class="text-center text-success">Hasil Segmentasi</h3>
                    <div class="text-center">
                        <img src="@ViewBag.SegmentationResult" alt="Segmentasi Gambar" class="img-fluid rounded-3 shadow-sm" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Menambahkan link untuk Bootstrap 5 -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- Tambahkan CSS tambahan untuk animasi dan hover effect -->
<style>
    /* Hover effect untuk tombol */
    .btn-primary:hover {
        background-color: #0056b3;
        transition: background-color 0.3s ease;
    }

    /* Card dengan bayangan yang lebih halus */
    .card {
        transition: transform 0.3s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Efek bayangan pada gambar */
    .img-fluid {
        transition: transform 0.3s ease;
    }

    .img-fluid:hover {
        transform: scale(1.05);
    }

    /* Responsif dan desain minimalis */
    .container {
        padding-top: 50px;
    }
</style>